<div class="container">
  
  <h2>Tantárgyak</h2>
  
  {{!--
  {{#each messages}}
  <div class="alert alert-dismissible alert-success">
      <button type="button" class="close" data-dismiss="alert">×</button>
      {{this}}
  </div>
  {{/each}}  --}}
  
  <table class="table table-striped table-hover ">
      <tr>
        <th>Tárgy neve</th>
        <th>Tárgy kódja</th>
        <th>helyek száma</th>
        <th>helyszín</th>
        <th>Oktató</th>
        <th>Módosítás</th>
      </tr>
      {{#each model as |subject|}}
      <tr class="rows">
        <td>{{subject.name}}</td>
        <td>{{subject.code}}</td>
        <td>{{subject.size}}</td>
        <td>{{subject.location}}</td>
        <td>{{subject.teacher}}</td>
        <td>
          <button  class="btn btn-warning buttons" {{action "editItem" subject}}>Szerkeszt</button>
          <button  class="btn btn-danger buttons" {{action "deleteItem" subject.id}}>Töröl</button>
        </td>
      </tr>
      {{/each}}
      

    
  </table>
</div>